programa {
  funcao inicio() {
    inteiro diaDasemana

    escreva ("digite um dia da semana com numeros de 1 a 7: ")
    leia(diaDasemana)

    escolha (diaDasemana){
      caso 1:
          escreva ("domingo")
        pare
      caso 2:
          escreva ("segunda")
        pare
      caso 3:
          escreva("terça")
        pare
        caso 4:
           escreva("quarta")
        pare
        caso 5:
            escreva("quinta")
        pare
        caso 6:
            escreva("sexta")
        pare
        caso 7: 
            escreva("sabado")
        pare
        caso contrario:
            escreva("dia inválido")
            pare
     
    }
  }
}
