programa {
  funcao inicio() {
    inteiro n1, n2
    cadeia op

    escreva("digite o primeiro numero: ")
    leia(n1)
    escreva("digite o segundo numero: ")
    leia(n2)

    escreva("escolha a operação: \n + para soma \n - para subtração \n / para divisão \n * para multiplicação\n ")
    leia (op)

    escolha(op){
      caso "+":
      escreva("resultado", n1+n2)

      caso "-":
      escreva("resultado", n1-n2)
    
    
    
    }


    
    
      
  }
}
